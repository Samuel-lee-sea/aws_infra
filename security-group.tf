resource "aws_security_group_rule" "webapp_to_mysql" {
  type                     = "egress"
  from_port                = 3306
  to_port                  = 3306
  protocol                 = "tcp"
  security_group_id        = aws_security_group.webapp_sg.id
  source_security_group_id = aws_security_group.mysql_sg.id
}

resource "aws_security_group_rule" "mysql_allow_webapp" {
  type                     = "ingress"
  from_port                = 3306
  to_port                  = 3306
  protocol                 = "tcp"
  security_group_id        = aws_security_group.mysql_sg.id
  source_security_group_id = aws_security_group.webapp_sg.id
}